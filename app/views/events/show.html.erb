<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Location:</strong>
  <%= @event.location %>
</p>

<p>
  <strong>Start time:</strong>
  <%= @event.start_time %>
</p>

<p>
  <strong>End time:</strong>
  <%= @event.end_time %>
</p>

<%if can?(:crud, @event) %>
  <%= link_to 'Edit', edit_event_path(@event), class: 'btn btn-primary' %>
  <%= link_to(
    'Delete',
     event_path(@event),
    data: {confirm: 'Are you sure?'},
    method: :delete,
    class: 'btn btn-danger'
  ) %>
<% end %>
