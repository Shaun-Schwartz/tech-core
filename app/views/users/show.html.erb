<div class="row justify-content-center">
  <div class="section-header text-center">
    <h2 class="title">User</h2>
  </div>

  <div class="col-xs-3"></div>
  <div class="col-xs-6">
    <div class="blog-author">
			<div class="media">
				<div class="media-body">
					<div class="media-heading">
						<h3><%= @user.full_name %></h3>
						<div class="author-social">
							<a href="mail_to:<%= @user.email %>"><i class="fa fa-envelope"></i></a>
						</div>
					</div>
          <% if @user.organizations.present? %>
            <p><strong>Organization:</strong> <%= @user.organizations.first.name %></p>
          <% end %>
				</div>
			</div>
		</div>

    <% if can?(:crud, @user) %>
      <%= link_to 'Edit Account', edit_user_path(@user), class: "btn btn-primary"  %>

      <%= link_to 'Delete Account', user_path(@user),
      method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger"  %>
      <% end %>
  </div>
</div>
