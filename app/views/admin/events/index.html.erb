<%= render 'form', event: @event %>
<h1>Events</h1>

<table>
  <tbody>
    <tr>
      <th>Event Title</th>
      <th>Description</th>
      <th>Location</th>
      <th>Created At</th>
    </tr>

    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.location %></td>
        <td><%= event.created_at %></td>
        <td><%= link_to 'Delete', admin_event_path(event), method: :delete,
                                  data: {confirm: 'Are you sure?'} %></td>

      </tr>
    <% end %>
  </tbody>
</table>
