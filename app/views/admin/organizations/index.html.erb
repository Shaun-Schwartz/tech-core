<%= render 'form', organization: @organization %>

<h1>Organizations</h1>
<table>
  <tbody>
    <tr>
      <th>Organization Name</th>
      <th>Published</th>
      <th>Action</th>
    </tr>

    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.name %></td>
        <td><%= organization.published %></td>
        <td><%= link_to 'Show', organization %>
          <%= link_to 'Delete', admin_organization_path(organization), method: :delete,
                                    data: {confirm: 'Are you sure?'} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
