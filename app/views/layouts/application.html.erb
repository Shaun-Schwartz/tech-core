<!DOCTYPE html>
<html>
  <head>
    <title>Techcore</title>
    <%= csrf_meta_tags %>

    <script src="//maps.google.com/maps/api/js?key=AIzaSyDW7rAcaSRM22xIQK-J4G0Hga0Kp6Zx0Vc"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header id="home">
  		<!-- Background Image -->
  		<div class="bg-img" style="background-image: url('/assets/background2.jpg');">
  			<div class="overlay"></div>
  		</div>
  		<!-- /Background Image -->

  		<!-- Nav -->
  		<nav id="nav" class="navbar nav-transparent">
  			<div class="container">

  				<div class="navbar-header">
  					<!-- Logo -->
  					<div class="navbar-brand">
  						<a href="<%= home_path %>">
  							<%= image_tag 'logo.png', class: 'logo' %>
  							<%= image_tag 'logo-alt.png', class: 'logo-alt' %>
  						</a>
  					</div>
  					<!-- /Logo -->

  					<!-- Collapse nav button -->
  					<div class="nav-collapse">
  						<span></span>
  					</div>
  					<!-- /Collapse nav button -->
  				</div>

  				<!--  Main navigation  -->
  				<ul class="main-nav nav navbar-nav navbar-right">
  					<li><%= link_to 'Organizations', organizations_path %></li>
  					<li><li class="nav-item"><%= link_to 'Events', events_path %></li>
  					<li><%= link_to 'News', news_index_path %></li>

            <% if user_signed_in? %>
            <!-- TODO connect hrefs/links with their respective actions -->
  					<li class="has-dropdown"><a href="#blog"><%= current_user.first_name %></a>
  						<ul class="dropdown">
  							<% if current_user.is_admin? %>
                  <li><%= link_to("Organizations admin", admin_organizations_path) %></li>
                  <li><%= link_to("Events admin", admin_events_path) %></li>
                  <li><%= link_to("Users admin", admin_users_path) %></li>
                <% end %>
                <li><%= link_to('Sign Out', session_path, method: :delete, data: {confirm: 'Do you really want to sign out?'}) %></li>
  						</ul>
  					</li>
            <% else %>
              <li class="nav-item"></li>
              <li class="nav-item"></li>
              <li><%= link_to 'Sign Up', new_user_path %></li>
              <li><%= link_to 'Login', new_session_path %></li>
            <% end %>
  				</ul>
  				<!-- /Main navigation -->

  			</div>
  		</nav>
  		<!-- /Nav -->

  		<!-- home wrapper -->
  		<div class="home-wrapper">
  			<div class="container">
  				<div class="row">

  					<!-- home content -->
  					<div class="col-md-10 col-md-offset-1">
  						<div class="home-content">
                <!-- TODO Change the h1 and p text to something more meaningful -->
  							<h1 class="white-text">We Are the Team 2</h1>
  							<p class="white-text">Morbi mattis felis at nunc. Duis viverra diam non justo. In nisl.
  							</p>
  						</div>
  					</div>
  					<!-- /home content -->

  				</div>
  			</div>
  		</div>
  		<!-- /home wrapper -->

  	</header>

    <main role="main">

        <div class="container">
          <div id="messages">
            <% if flash[:alert].present? %>
              <div id="alert" class="alert alert-warning" role="alert">
                <%= flash[:alert] %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
            <% end %>

            <% if flash[:notice].present? %>
            <div id="notice" class="alert alert-info" role="notice">
              <%= flash[:notice] %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <% end %>
          </div>

          <%= yield %>
        </div>

    </main>

    <footer id="footer" class="sm-padding bg-dark">

  		<!-- Container -->
  		<div class="container">

  			<!-- Row -->
  			<div class="row">

  				<div class="col-md-12">

  					<!-- footer logo -->
  					<div class="footer-logo">
  						<a href="index.html"><%= image_tag 'logo-alt.png', class: 'logo-alt' %></a>
  					</div>
  					<!-- /footer logo -->

  					<!-- footer follow -->
  					<ul class="footer-follow">
  						<li><a href="#"><i class="fa fa-facebook"></i></a></li>
  						<li><a href="#"><i class="fa fa-twitter"></i></a></li>
  						<li><a href="#"><i class="fa fa-google-plus"></i></a></li>
  						<li><a href="#"><i class="fa fa-instagram"></i></a></li>
  						<li><a href="#"><i class="fa fa-linkedin"></i></a></li>
  						<li><a href="#"><i class="fa fa-youtube"></i></a></li>
  					</ul>
  					<!-- /footer follow -->

  					<!-- footer copyright -->
  					<div class="footer-copyright">
  						<p>Copyright Â© 2017. All Rights Reserved. Designed by <a href="https://colorlib.com" target="_blank">Colorlib</a></p>
  					</div>
  					<!-- /footer copyright -->

  				</div>

  			</div>
  			<!-- /Row -->

  		</div>
  		<!-- /Container -->

  	</footer>
  	<!-- /Footer -->

  	<!-- Back to top -->
  	<div id="back-to-top"></div>

    <!-- Preloader -->
  	<div id="preloader">
  		<div class="preloader">
  			<span></span>
  			<span></span>
  			<span></span>
  			<span></span>
  		</div>
  	</div>
  	<!-- /Preloader -->
</body>
  </html>
